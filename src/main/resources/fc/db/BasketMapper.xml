<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org/DTD Mapper3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fc.db.BasketMapper">

	<select id="basket_list" resultType="bDTO" parameterType="mDTO">
	SELECT * FROM basket
	<where>
		id = #{id}
	</where>
</select>


<insert id="add_basket" parameterType="bDTO">
	insert into basket (id , num , price , cnt , totalPrice)
	values
	(#{id} , #{num} , #{price} , #{cnt} , #{price} * #{cnt})
</insert>

<select id="myPage" resultType="mDTO" parameterType="mDTO">
	SELECT * FROM member
	<where>
		email = #{email}
	</where>
</select>
	
</mapper>